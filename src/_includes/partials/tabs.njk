{% macro menuItem(menuTitle,menuPrice,menuPrice2,menuDesc, menuType) %}
  <div class="mb-4">
    <div class="flex items-start justify-between">
      <h4 class="text-gray-100">{{ menuTitle }}</h4>
      <span class="text-base text-gray-100 italic font-serif">
      &euro;{{ menuPrice }}
      {% if price2 %}
        / &euro;{{ menuPrice2 }}
      {% endif %}
      </span>
    </div>
      <p class="pr-5 text-sm text-gray-100">{{ menuDesc }}</p>
  </div>
{% endmacro %}



